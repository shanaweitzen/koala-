<div id="holder"></div>
<script id="template" type="text/template">
	<div id="messageWindow">
		{{#messages}}
			<li><span class="user_name">{{ user.first_name }} {{user.last_name}}</span> : {{ text }}
			<span class="created_at">{{ created_at }}</span>
			</li>
		{{/messages }}
	</div>
	<div class="message_field">
			<%= form_for :message, url: messages_path, method: :post, remote: true do |f| %>
			<%= f.hidden_field :user_id , value: current_user.id %>
			<%= f.text_field :text, id: "message_field" %>
			<%= button_tag(type: 'submit', class:"btn btn-primary message") do %>
				<i class="icon-arrow-right"></i>
			<% end %>	
			<% end %>
	</div>
</script>

<%= javascript_tag do %>
	pusher_key = '<%= j ENV['PUSHER_KEY'] %>';
<% end %>
